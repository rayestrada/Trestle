screenshot  = screenshot.png
name        = Trestle
description = This is a custom theme reinforced by Trestle.

; This theme is compatible with Drupal 7 core.
core        = 7.x
version = "7.x-2.0"
;base theme  = zen

; First we remove the system's menu and message styling.
stylesheets[all][] = system.base.css
stylesheets[all][] = system.menus.css
stylesheets[all][] = system.messages.css
stylesheets[all][] = system.theme.css
stylesheets[all][] = horizontal-tabs.css

; Then we add our own stylesheet.
stylesheets[all][] = dist/css/styles.css

; Optionally add some JavaScripts to your theme.
scripts[] = js/script.js
scripts[] = js/drupal.js
scripts[] = js/eqheights.js


; This section lists the regions defined in default page.tpl.php and
; maintenance-page.tpl.php files.
regions[header]         = Header
regions[header_search]  = Header Search
regions[navigation]     = Navigation bar
regions[highlighted]    = Highlighted
regions[help]           = Help
regions[description]    = Description
regions[content]        = Content
regions[sidebar_first]  = First sidebar
regions[sidebar_second] = Second sidebar
regions[marketing]      = Marketing
regions[footer]         = Footer
regions[bottom]         = Page bottom

; The page_top and page_bottom regions are hidden, but they are required in order for
; the html.tpl.php to work properly, so do not delete them.
regions[page_top]       = Page top
regions[page_bottom]    = Page bottom

; Various page elements output by the theme can be toggled on and off.
; See the Drupal 7 Theme Guide for more info: https://drupal.org/node/171205#features
features[] = logo
features[] = name
;features[] = slogan
;features[] = node_user_picture
;features[] = comment_user_picture
features[] = favicon
features[] = main_menu
;features[] = secondary_menu


